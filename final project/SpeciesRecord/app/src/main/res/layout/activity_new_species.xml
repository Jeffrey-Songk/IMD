<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewSpecies">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/kingdom_description"
                android:id="@+id/kingdom_description"
                style="@style/level_description" />

            <EditText
                android:id="@+id/kingdom_name"
                android:hint="@string/optional"
                style="@style/level_name" />
        </LinearLayout>


        <EditText
            android:visibility="gone"
            android:id="@+id/kingdom_note"
            android:hint="@string/optional_note"
            style="@style/Level_note" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/phylum_description"
                android:id="@+id/phylum_description"
                style="@style/level_description" />

            <EditText
                android:id="@+id/phylum_name"
                style="@style/level_name"
                android:hint="@string/optional" />
        </LinearLayout>


        <EditText
            android:visibility="gone"
            android:id="@+id/phylum_note"
            android:hint="@string/optional_note"
            style="@style/Level_note" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/class_description"
                android:id="@+id/class_description"
                style="@style/level_description" />

            <EditText
                android:id="@+id/class_name"
                style="@style/level_name"
                android:hint="@string/optional" />
        </LinearLayout>


        <EditText
            android:visibility="gone"
            android:id="@+id/class_note"
            android:hint="@string/optional_note"
            style="@style/Level_note" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/order_description"
                android:id="@+id/order_description"
                style="@style/level_description" />

            <EditText
                android:id="@+id/order_name"
                style="@style/level_name"
                android:hint="@string/optional" />
        </LinearLayout>


        <EditText
            android:visibility="gone"
            android:id="@+id/order_note"
            android:hint="@string/optional_note"
            style="@style/Level_note" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/family_description"
                android:id="@+id/family_description"
                style="@style/level_description" />

            <EditText
                android:id="@+id/family_name"
                style="@style/level_name"
                android:hint="@string/optional" />
        </LinearLayout>


        <EditText
            android:visibility="gone"
            android:id="@+id/family_note"
            android:hint="@string/optional_note"
            style="@style/Level_note" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/genus_description"
                android:id="@+id/genus_description"
                style="@style/level_description" />

            <EditText
                android:id="@+id/genus_name"
                style="@style/level_name"
                android:hint="@string/optional" />
        </LinearLayout>


        <EditText
            android:visibility="gone"
            android:id="@+id/genus_note"
            android:hint="@string/optional_note"
            style="@style/Level_note" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/species_description"
                android:id="@+id/species_description"
                style="@style/level_description" />

            <EditText
                android:id="@+id/species_name"
                style="@style/level_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:hint="@string/optional" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/species_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/species_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:hint="@string/optional_note"
                android:inputType="textLongMessage|textMultiLine"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginLeft="96dp"
                android:layout_marginEnd="96dp"
                android:layout_marginRight="96dp"
                android:onClick="addPhotos"
                android:text="@string/add_photos_button" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_add_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="24dp"
            android:onClick="addConfirm"
            android:text="@string/add_confirm" />
    </LinearLayout>
</ScrollView>